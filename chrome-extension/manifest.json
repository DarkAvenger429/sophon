{
  "manifest_version": 3,
  "name": "Sophon Sentinel - Enterprise Guard",
  "version": "3.0",
  "description": "Full-spectrum AI Misinformation Defense Suite.",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}